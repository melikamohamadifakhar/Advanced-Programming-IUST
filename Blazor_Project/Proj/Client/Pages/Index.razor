@page "/"
@inject NavigationManager NavigationManager
<h1>Welcome to our online store!</h1>
<button class="button button3" @onclick=nav_d>Go to categories part!</button>
<style>
    .button {
        background-color: #4CAF50;
        border: none;
        color: white;
        padding: 16px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        transition-duration: 0.4s;
        cursor: pointer;
        width: 100%;
    }

    .button3 {
        background-color: white;
        color: black;
        border: 2px solid #f44336;
        width: 100%;
    }

    .button3:hover {
        background-color: #f44336;
        color: white;
    }
</style>

@code {
    private void nav_d()
    {
        NavigationManager.NavigateTo("/SelectCategory");
    }
}
